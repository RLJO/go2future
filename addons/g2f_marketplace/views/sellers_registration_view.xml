<odoo>

    <record id="corporate_registrations_view_form" model="ir.ui.view" >
      <field name="name">Corporate Registration</field>
      <field name="model">corporate.registration</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Corporate Registration">
            <header>
                <button name="create_contacts" string="Approve request" type="object" class="oe_highlight"/>
            </header>
            <sheet>
                <separator/>
                <group string="Account data" col="4" colspan="2">
                    <field name="company" placeholder="Company Name"/>
                    <field name="company_cuit" placeholder="Company Cuit"/>
                    <field name="address" placeholder="Company Address" class="o_address_street"/>
                    <field name="name" placeholder="Firstname"/>
                    <field name="last_name" placeholder="Last name"/>
                    <field name="email" widget="url" placeholder="e-mail"/>
                    <field name="phone" placeholder="phone"/>
                    <field name="industry_id" widget="many2one_tags" options="{'no_create_edit': True}"/>
                    <field name="parent_id" string='Company' widget="many2one_tags"/>
                </group>
                <group string="Datos Fiscales" col="4" colspan="2">
                    <field name="is_exempt_iva" placeholder="Is Exempt IVA"/>
                    <field name="is_exclution_iva" placeholder="Is Exclution IVA"/>
                    <field name="is_permanent_exclution" placeholder="Is Permanent exclution"/>
                    <field name="certificate_date_start" placeholder="certificate date start"/>
                    <field name="certificate_date_end" placeholder="certificate date end"/>
                    <field name="certificate_file" placeholder="Certificate file"/>
                </group>
                <group string="Ingresos Brutos" col="4" colspan="2">
                    <field name="regime_gross_income" placeholder="Regime gross income"/>
                    <field name="registration_number_gross_income" placeholder="Registration Number"/>
                    <field name="registration_gross_income_file" placeholder="Registration File"/>
                    <field name="colaborate_registration" string='Approved?' widget="many2one_tags"/>
                </group>
            </sheet>
        </form>
      </field>
    </record>

    <record id="corporate_registration_view_search" model="ir.ui.view" >
      <field name="name">Corporate Registration</field>
      <field name="model">corporate.registration</field>
      <field name="arch" type="xml">
        <search>
            <filter name="pending" string="Pendient to Approve" domain="[('colaborate_registration', '=', False)]"/>
            <filter name="approved" string="Aproved" domain="[('colaborate_registration', '=', True)]"/>
            <separator/>
        </search>
      </field>
    </record>

    <record id="corporate_registration_view_tree" model="ir.ui.view" >
      <field name="name">Corporate Registration</field>
      <field name="model">corporate.registration</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree>
            <field name="company"/>
            <field name="name"/>
            <field name="email"/>
            <field name="phone"/>
        </tree>
      </field>
    </record>

    <record id="corporate_registrations_action_window" model="ir.actions.act_window">
      <field name="name">Corporate Registration</field>
      <field name="res_model">corporate.registration</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Solicitud de registro de vendedores"
        id="corporate_list"
        parent="g2f_apirest.name_store"
        action="corporate_registrations_action_window"
        sequence="1"/>

</odoo>

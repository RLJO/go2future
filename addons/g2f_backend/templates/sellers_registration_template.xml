<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="sellers_registration_page_template">
        <t t-call="website.layout">
            <t t-set="title">Registro de Empresas</t>
            <div class="oe_structure">
                <div id="wrap">
                    <br/>
                    <div class="container">
                        <!-- === Snippets' area === -->
                        <div class="oe_structure" />
                        <br/>

                        <form action="sellers-registration" method="post" enctype="multipart/form-data" >

                            <style type="text/css">
                                input:focus:invalid {
                                background: pink;
                                background-size: 25px;}
                            </style>

                            <div class="row">
                                <div class="col-sm-8">
                                    <fieldset>
                                        <div class="form-group">
                                            <label for="name">Nombres*</label>
                                            <input type="text" class="form-control" name="name" placeholder="Nombre" required="true"/>
                                        </div>

                                        <div class="form-group">
                                            <label for="email">Correo Electrónico*</label>
                                            <input type="email" class="form-control" id="email" name="email" placeholder="Correo Electronico" required="true"/>
                                        </div>

                                        <div class="form-group">
                                            <label for="phone">Teléfono*</label>
                                            <input type="number" class="form-control" id="phone" name="phone" placeholder="Sin el 15, sin guion, ni puntos, ni espacios Ejemplo: 1124322354"/>
                                        </div>

                                        <div class="form-group">
                                            <label for="company">Compania</label>
                                            <input type="text" class="form-control" name="company" placeholder="Nombre de la Compania" required="true"/>
                                        </div>

                                        <div class="form-group">
                                            <label for="sector_id">Tipo de Sector</label>
                                            <select class="custom-select" name="sector_id">
                                                <t t-foreach="sector_list" t-as="sector">
                                                    <option t-att-value="sector.id">
                                                        <t t-esc="sector.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>

                                        <br/>

                                        <br/>
                                        <br/>
                                        <footer class="modal-footer">
                                            <button type="submit" t-attf-class="btn btn-primary new_opp_confirm" >Enviar</button>
                                        </footer>
                                        <br/>
                                    </fieldset>
                                    <br/>
                                </div>
                                <div class="col-sm-4">
                                    <!-- === Snippets' area === -->
                                    <div class="oe_structure" />
                                </div>
                            </div>
                        </form>

                        <!-- === Snippets' area === -->
                        <div class="oe_structure" />
                    </div>
                </div>
            </div>
        </t>
    </template>

    <record id="person_template_id" model="website.page">
        <field name="name">Registro de Vendedores</field>
        <field name="website_published">True</field>
        <field name="url">/corporate-registration</field>
        <field name="view_id" ref="sellers_registration_page_template"/>
    </record>

</odoo>

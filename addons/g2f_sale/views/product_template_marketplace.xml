<odoo>
            <!--MARKETPLACE-UPDATE-->

    <record id="go2f_product_template_marketplace_form_view" model="ir.ui.view" >
        <field name="name">go2f.product.marketplace.form</field>
        <field name="model">product.template</field>
        <field name="priority" eval="1"/>
        <field name="inherit_id" ref="odoo_marketplace.wk_seller_product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_open_quants" attrs="{'invisible':[('type', '!=', 'product')]}" class="oe_stat_button" icon="fa-cubes">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value" widget="statinfo">
                            <field name="qty_available" widget="statinfo" nolabel="1" class="mr4"/>
                            <field name="uom_name"/>
                        </span>
                        <span class="o_stat_text">On Hand</span>
                    </div>
                </button>
            </xpath>

            <xpath expr="//field[@name='type']" position="attributes">
                <attribute name="groups">account.group_account_user</attribute>
            </xpath>

            <xpath expr="//field[@name='categ_id']" position="attributes">
                <attribute name="groups">account.group_account_user</attribute>
            </xpath>

            <xpath expr="//page[3]" position="attributes">
                <attribute name="groups">base.group_system</attribute>
            </xpath>

            <xpath expr="//page[5]" position="attributes">
                <attribute name="groups">base.group_system</attribute>
            </xpath>

            <xpath expr="//page[@name='shop']" position="attributes">
                <attribute name="groups">base.group_system</attribute>
            </xpath>

            <xpath expr="//label[@for='public_categ_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='public_categ_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
                <attribute name="required">0</attribute>
            </xpath>

            <xpath expr="//field[@name='barcode']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='hs_code']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='lst_price']" position="after">
                <field name="taxes_id" widget="many2many_tags" options="{'no_create': True}" attrs="{'required': True }"/>
                <field name="internal_tax" widget="float" placeholder="Internal Taxes" invisible="1"/>
            </xpath>

            <!-- this is in: PAGE=Inventory Group=Weights -->
            <xpath expr="//field[@name='uom_id']" position="replace">
                <field name="uom_id" options="{'no_open':True, 'no_create_edit':True, 'no_create':True}" attrs="{'required': True }" domain="[('unit_for_sale', '=', True)]"/>
            </xpath>

            <xpath expr="//field[@name='categ_id']" position="before">
                <field name="brand"/>
                <field name="contents"/>
                <field name="uom_id" options="{'no_open':True, 'no_create_edit':True, 'no_create':True}" attrs="{'required': True }" domain="[('unit_for_sale', '=', True)]"/>
                <field name="barcode" string="EAN 13" required="1"/>
                <field name="country_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                <field name="useful_life" string="Vida útil en días"/>
            </xpath>


            <xpath expr="//field[@name='uom_po_id']" position="attributes">
                <attribute name="groups">base.group_system</attribute>
            </xpath>

            <xpath expr="//separator" position="before">
                <group id="package">
                    <group string="Datos del Bulto">
                        <field name="units_per_package"/>
                        <field name="dun14" attrs="{'required': True}"/>
                        <field name="width" string="Ancho (mm)" attrs="{'required': True}"/>
                        <field name="height" string="Altura (mm)" attrs="{'required': True}"/>
                        <field name="depth" string="Profundidad (mm)" attrs="{'required': True}"/>
                        <field name="weight" string="Peso del bulto (g)" attrs="{'required': True}"/>
                    </group>
                    <group string="Atributos">
                        <field name="vegan"/>
                        <field name="organic"/>
                        <field name="without_tacc"/>
                        <field name="sugar_free"/>
                    </group>
                </group>
                <group string="Mensajes opcionales">
                    <field name="optional_messages" nolabel="1" placeholder="Mensajes opcionales para el cliente"/>
                </group>
                <br/>
                <group string="Descripción">
                    <field name="product_description" nolabel="1" placeholder="Descripción del producto"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>

<odoo>

       

        
        
        <record model="ir.ui.view" id="product_custom_form">
        <field name="name">product.custom.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
                
        <field name="arch" type="xml">
       
          
                       

        <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]/page[@name='purchase']" position="replace"/> 
        <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]/page[@name='shop']" position="replace"/>
        <xpath expr="//page[@name='sales']" position="replace"/>
        <xpath expr="//form[@name='Product Template']/sheet[1]/div[not(@name)][1]/div[@name='options']/div[2]/label[1]" position="replace"/>
        <xpath expr="//form[@name='Product Template']/sheet[1]/div[not(@name)][1]/div[@name='options']/div[1]/label[1]" position="replace"/>
        <xpath expr="//button[@name='action_view_stock_move_lines']" position="replace"/>
        <xpath expr="//button[@name='action_product_tmpl_forecast_report']" position="replace"/>
        <xpath expr="//button[@name='action_open_quants']" position="replace"/>
        <!-- <xpath expr="//button[@name='170']" position="replace"/>  -->
        <xpath expr="//form[@name='Product Template']/sheet[1]/div[@name='button_box']/button[@name='action_view_orderpoints'][2]" position="attributes">
          <attribute name="groups">stock.group_adv_location</attribute>
        </xpath>
        <xpath expr="//field[@name='sale_ok']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//field[@name='purchase_ok']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="invisible">1</attribute>
        </xpath>
        
        <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]/page[@name='general_information']/group[1]/group[@name='group_general']/field[@name='type']" position="attributes">
          <attribute name="groups">stock.group_stock_user,sales_team.group_sale_manager</attribute>
        </xpath>
        
        <xpath expr="//field[@name='categ_id']" position="attributes">
          <attribute name="groups">sales_team.group_sale_manager</attribute>
        </xpath>
        <xpath expr="//field[@name='categ_id']" position="after">
          <field name="url_link_video_entrenamiento"/>
          <field name="nombre_producto_linea_1"/>
           <field name="nombre_producto_linea_2"/>
          <field name="descripcion_audible"/>
          <field name="message_main_attachment_id" groups="sales_team.group_sale_manager"/>
        </xpath>
       <!--
        <xpath expr="//field[@name='tic_category_id']" position="attributes">
          <attribute name="groups">sales_team.group_sale_manager</attribute>
        </xpath>
        -->
        <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]/page[@name='general_information']/group[1]" position="after">
          <group name="studio_group_fKmh1">
            <group name="studio_group_fKmh1_left">
              <field name="company_id" />
              <field name="organico"/>
              <field name="vegano"/>
              <field name="contenido_azucar"/>
              <field name="contiene_tacc"/>
            </group>
            <group name="studio_group_fKmh1_right">
              <field name="precio_por_kg"/>
              <field name="precio_por_l"/>
            </group>
          </group>
          <group name="studio_group_oDCXt" string="Description for the website">
            <field name="website_description"/>
          </group>
        </xpath>
        <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]/page[@name='general_information']/group[not(@name)][2]" position="attributes">
          <attribute name="groups">sales_team.group_sale_manager</attribute>
        </xpath>
        <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]/page[@name='inventory']" position="attributes">
          <attribute name="attrs">{}</attribute>
          <attribute name="groups">sales_team.group_sale_manager,stock.group_stock_manager</attribute>
        </xpath>
              

        </field>
    </record>

  

    <record id="productos_action_window" model="ir.actions.act_window">
        <field name="name">Productos</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form,kanban</field>
        </record>



        <menuitem name="Go2Future" id="productos_menu_root"/>
        <menuitem name="Go2Future Productos" id="name_productos" parent="productos_menu_root"/>
        <menuitem name="Productos" id="productos_list" parent="name_productos"
        action="productos_action_window"/>

</odoo>
<oddo>
    <data>


        <!-- Informe txt de las facturas emitidas al consumidor final para los vendedores -->
        <record id="account_afip_statement_view" model="ir.ui.view">
            <field name="name">Journals Audit</field>
            <field name="model">account.afip.report</field>
            <field name="arch" type="xml">
                <form string="AFIP Statement Report">
                    <div class="alert alert-info text-center" role="status">
                        Press the "Download AFIP File" button to generate AFIP Report.
                    </div>
                    <footer>
                        <button string="Download AFIP File" name="make_afip_file" type="object" class="btn-primary"/>
                         or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_afip_statement" model="ir.actions.act_window">
            <field name="name">AFIP Statement Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.afip.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_afip_statement_view"/>
            <field name="target">new</field>
        </record>

        <menuitem id="wk_seller_dashboard_reports_menu" name="Reports" parent="wk_seller_dashboard" groups="odoo_marketplace.marketplace_seller_group" sequence="9"/>
            <menuitem id="afip_statement_menu" name="AFIP Statement" parent="wk_seller_dashboard_reports_menu" sequence="1"/>
                <menuitem id="afip_file_menu" name="Download AFIP File" parent="afip_statement_menu" action="action_afip_statement" sequence="10"/>


    </data>
</oddo>
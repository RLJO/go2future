        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />

        <field name="arch" type="xml">



        <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]/page[@name='purchase']"  position="attributes">
          <attribute name="groups">base.group_system,purchase.group_purchase_user,stock.group_stock_user,sales_team.group_sale_manager,sales_team.group_sale_salesman_all_leads,sales_team.group_sale_salesman</attribute>
        </xpath>

        <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]/page[@name='shop']"  position="attributes">
          <attribute name="groups">base.group_system,purchase.group_purchase_user,stock.group_stock_user,sales_team.group_sale_manager,sales_team.group_sale_salesman_all_leads,sales_team.group_sale_salesman</attribute>
        </xpath>

        <xpath expr="//page[@name='sales']"  position="attributes">
          <attribute name="groups">base.group_system,purchase.group_purchase_user,stock.group_stock_user,sales_team.group_sale_manager,sales_team.group_sale_salesman_all_leads,sales_team.group_sale_salesman</attribute>
        </xpath>

        <xpath expr="//form[@name='Product Template']/sheet[1]/div[not(@name)][1]/div[@name='options']/div[2]/label[1]"  position="attributes">
          <attribute name="groups">base.group_system,purchase.group_purchase_user,stock.group_stock_user,sales_team.group_sale_manager,sales_team.group_sale_salesman_all_leads,sales_team.group_sale_salesman</attribute>
        </xpath>

        <xpath expr="//form[@name='Product Template']/sheet[1]/div[not(@name)][1]/div[@name='options']/div[1]/label[1]"  position="attributes">
          <attribute name="groups">base.group_system,purchase.group_purchase_user,stock.group_stock_user,sales_team.group_sale_manager,sales_team.group_sale_salesman_all_leads,sales_team.group_sale_salesman</attribute>
        </xpath>


        <xpath expr="//field[@name='sale_ok']"  position="attributes">
          <attribute name="groups">base.group_system,purchase.group_purchase_user,stock.group_stock_user,sales_team.group_sale_manager,sales_team.group_sale_salesman_all_leads,sales_team.group_sale_salesman</attribute>
        </xpath>

        <xpath expr="//field[@name='purchase_ok']"  position="attributes">
          <attribute name="groups">base.group_system,purchase.group_purchase_user,stock.group_stock_user,sales_team.group_sale_manager,sales_team.group_sale_salesman_all_leads,sales_team.group_sale_salesman</attribute>
        </xpath>
        
        <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]/page[@name='general_information']/group[1]/group[@name='group_general']/field[@name='type']"  position="attributes">
          <attribute name="groups">base.group_system,purchase.group_purchase_user,stock.group_stock_user,sales_team.group_sale_manager,sales_team.group_sale_salesman_all_leads,sales_team.group_sale_salesman</attribute>
        </xpath>
        
        <xpath expr="//field[@name='categ_id']"  position="attributes">
          <attribute name="groups">base.group_system,purchase.group_purchase_user,stock.group_stock_user,sales_team.group_sale_manager,sales_team.group_sale_salesman_all_leads,sales_team.group_sale_salesman</attribute>
        </xpath>

        <xpath expr="//field[@name='taxes_id']" position="attributes">
          <attribute name="groups">base.group_system,purchase.group_purchase_user,stock.group_stock_user,sales_team.group_sale_manager,sales_team.group_sale_salesman_all_leads,sales_team.group_sale_salesman</attribute>
        </xpath>

        <xpath expr="//field[@name='standard_price']" position="attributes">
          <attribute name="groups">base.group_system,purchase.group_purchase_user,stock.group_stock_user,sales_team.group_sale_manager,sales_team.group_sale_salesman_all_leads,sales_team.group_sale_salesman</attribute>
        </xpath>
        <xpath expr="//field[@name='uom_id']" position="attributes">
          <attribute name="groups">base.group_system,purchase.group_purchase_user,stock.group_stock_user,sales_team.group_sale_manager,sales_team.group_sale_salesman_all_leads,sales_team.group_sale_salesman</attribute>
        </xpath>
        <xpath expr="//field[@name='uom_po_id']" position="attributes">
          <attribute name="groups">base.group_system,purchase.group_purchase_user,stock.group_stock_user,sales_team.group_sale_manager,sales_team.group_sale_salesman_all_leads,sales_team.group_sale_salesman</attribute>
        </xpath>

        <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]/page[@name='general_information']/group[1]" position="after">


          <group name="studio_group_descpro1">
            <group name="studio_group_descpro1_left">
          <field name="url_link_video_entrenamiento"/>
          <field name="descripcion_audible"/>
            </group>
            <group name="studio_group_descpro1_right">
          <field name="nombre_producto_linea_1"/>
           <field name="nombre_producto_linea_2"/>
            </group>
          </group>

          <group name="studio_group_fKmh1">
            <group name="studio_group_fKmh1_left">
              <field name="organico"/>
              <field name="vegano"/>
              <field name="contenido_azucar"/>
              <field name="contiene_tacc"/>
            </group>
            <group name="studio_group_fKmh1_right">
              <field name="precio_por_kg"/>
              <field name="precio_por_l"/>
            </group>
          </group>
          <group name="studio_group_oDCXt" string="Description for the website">
            <field name="website_description"/>
          </group>
        </xpath>
        <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]/page[@name='general_information']/group[not(@name)][2]"  position="attributes">
          <attribute name="groups">purchase.access_product_product_purchase_manager,sale.access_product_product_sale_manager,stock.access_product_product_stock_manager,account.access_product_product_account_user,purchase.access_product_product_purchase_user,stock.access_product_product_stock_user,sale.access_product_product_sale_user</attribute>
        </xpath>

        <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]/page[@name='inventory']"  position="attributes">
          <attribute name="groups">purchase.access_product_product_purchase_manager,sale.access_product_product_sale_manager,stock.access_product_product_stock_manager,account.access_product_product_account_user,purchase.access_product_product_purchase_user,stock.access_product_product_stock_user,sale.access_product_product_sale_user</attribute>
        </xpath>

              

        </field>
    </record>


